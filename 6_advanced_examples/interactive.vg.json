{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Earthquakes above a magitude of 5.5 (2020-2021)",
  "data": {"url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/6_advanced_examples/data/earthquake.csv"},
  "transform": [
    {"calculate": "parseInt(datum.mag)", "as": "mag_int"}
  ],
  "vconcat": [
    {
      "width": 800,
      "height": 400,
      "projection": {"type": "equalEarth", "rotate":[-150,0,0]},
      "layer":[
        {
          "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/6_advanced_examples/data/earthquake.csv"
          },
          "transform": [{"filter": {"param": "time_brush"}}],
          "mark": {
              "type": "circle", 
              "tooltip": {"content": "data"}, 
              "opacity": 0.3,
              "size": 15
          },
          "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "color": {
                  "field": "mag",
                  "type": "quantitative",
                  "scale": {
                      "type": "threshold",
                      "domain": [6, 7, 8, 9], 
                      "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#bd0026", "#7f0000"]
                  }
              }
          }
        }
      ]
    },
    {
      "width": 800,
      "height": 60,
      "mark": "line",
      "title": "Use this line chart to filter out the data based on time",
      "params": [{
        "name": "time_brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {
          "field": "time",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Count"
        }
      }
    },
    {
    "width": 800,
    "mark": "area",
    "encoding": {
      "x": {
        "field": "time",
        "timeUnit": "yearmonth",
        "scale": {"domain": {"param": "time_brush"}},
        "axis": {"title": "", "tickCount":5, "grid": false} },
      "y": {
        "aggregate": "count",
        "title": "Count"
      },
      "color": {
        "field": "mag_int",
        "scale":{
          "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#bd0026", "#7f0000"]
        },
        "legend": null
      }
    }
  }
  ]
}
