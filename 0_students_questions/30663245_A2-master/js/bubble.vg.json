{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/zijinchen-0104/30663245_A2/master/data/A2.csv"
    },
    "vconcat": [{
    "width": 600,
    "height": 400,
    "transform": [
            {
              "calculate": "timeParse(datum['date_sold'], '%d/%m/%Y')",
              "as" : "date_new"
            }],
    "mark": {
      "type": "circle",
      "opacity": 0.8,
      "stroke": "black",
      "strokeWidth": 1
    },
    "encoding": {
      "x": {
        "field": "date_new",
        "timeUnit": "year",
        "type": "temporal",
        "axis": {"grid": false}
      },
      "y": {"field": "city_name", "type": "nominal", "axis": {"title": ""}},
      "size": {
        "field": "price",
        "aggregate":"average",
        "type": "quantitative",
        "title": "Property price",
        "legend": {"clipHeight": 30},
        "scale": {"rangeMax": 5000}
      },
      "color": {"field": "city_name", "type": "nominal", "legend": null}
    }
    }]
  }