{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Australian Property Sales Price",
    "width": 400,
    "height": 300,
    "transform": [
      {
          "calculate": "timeParse(datum['date_sold'], '%d/%m/%Y')",
          "as" : "date_new"
      }],
    "params":[{
      "name":"Year_selection",
      "value":2018,
      "bind":{"input":"range","min":2018,"max":2021,"step":1,"name":"Year:"}
    }],
    "projection": {"type": "equirectangular"},
    "data": {
    "url": "https://raw.githubusercontent.com/zijinchen-0104/30663245_A2/master/js/AUS_adm2.json",
    "format": {"type": "topojson", "feature": "AUS_adm2"}
    },
    "layer":[
      {
    "transform":[
        {"calculate": "'Data is not available in ' + datum.properties.NAME_1", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
    "transform": [
        {
            "lookup": "properties.NAME_1",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/zijinchen-0104/30663245_A2/master/data/A2.csv"
                },
                "key": "state",
                "fields": ["price"]
            }
        },
        {
          "filter":"datum.date_new == Year_selection"
        }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "price",
            "type": "quantitative",
            "scale": {"type": "threshold","domain":[2000000,3000000,4000000],"range":["#fdbe85", "#fd8d3c","#e6550d", "#a63603"]},
            "legend": {"format": ".1s"}
    },
    "tooltip": [
        {"field": "price", "type": "quantitative", "title": "Properity price"},
        {"field": "properties.NAME_1", "type": "nominal","title": "State"}
    ]
    }
    }]
}
   